{% extends "pum://layout.html.twig" %}

{% set page_title = 'Inscription' %}
{% set page_name_analytics = 'register/step1' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/rpepum/css/new-password.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock %}

{% block header_javascript %}
    <script src="{{ asset('bundles/rpepum/js/rpe.new-password.js') }}" type="text/javascript"></script>
{% endblock %}

{% block  _reset_password_password_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _reset_password_password_single_row %}
    <li class="extra-info">
        <div class="form-left">
            {{ form_label(form.parent) }}
        </div><!--
        --><div class="form-right">
            <span class="text-box">
                {{ form_widget (form, {'attr' : {'data-validation' : 'strength', 'data-validation-strength' : '1', 'data-validation-error-msg': 'Veuillez choisir un mot de passe (8 caractères avec chiffres et lettres).'}}) }}
            </span>
        </div>
    </li>
{% endblock %}

{% block _reset_password_password_confirm_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _reset_password_password_confirm_single_row %}
    <li>
        <div class="form-left">
            {{ form_label(form.parent) }}
        </div><!--
        --><div class="form-right">
                {{ form_widget (form, {'attr' : {'data-validation' : 'confirmation', 'data-validation-confirm' : 'reset_password[password][single]', 'data-validation-error-msg': 'Assurez vous d\'avoir écrit le même mot de passe'}}) }}
        </div>
    </li>
{% endblock %}

{% block content %}
{% form_theme reset_pwd_form _self %}
    {% spaceless %}
    {% include "pum://includes/common/minimal_header.html.twig" %}
    <div class="password-reset-image">
    </div>
    <div class="wrapper">
        {{ form_start(reset_pwd_form,{ 'attr' : {'class' : 'password-reset-form new-form-styles'}})  }}

            <div class="form-wrapper">
                <h2 class="password-title">Creer un nouveau mot de passe</h2>
                <span class="password-title-small">Tapez ci-dessous votre nouveau mot de passe d'accès au réseau Viaeduc. Votre ancien mot de passe ne sera plus valable.</span>
                <div class="password-inner-form">
                    <ul>
                        {% if error %}
                            <div><li><span class="label label-danger">{{ error }}</span></li></div>
                        {% endif %}
                        {{ form_row(reset_pwd_form.password) }}
                        {{ form_row(reset_pwd_form.password_confirm) }}
                    </ul>
                </div>
                {{ form_widget(reset_pwd_form.Confirmer, {'label' : 'homepage.button_send'|trans(), 'attr' : {'class' : 'action-btn orange right'}}) }}
            </div>
            {{ form_widget(reset_pwd_form._token) }}
        {{ form_end(reset_pwd_form, {'render_rest': false}) }}
