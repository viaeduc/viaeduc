<div class="wrapper" style="width:530px; margin:0 auto; font-family: arial, sans-serif;">
    <!-- ========= -->
    <!-- SMALL TOP -->
    <!-- ========= -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="50" style="height:50px;">
            <td width="530" style="background-color:#fff; color:#000; height: 50px; width:530px; text-align:center; font-size:11px;">
                Si cet email ne s'affiche pas correctement, <a href="{{ app.request.schemeAndHttpHost }}{{ path('mail_invitation_group',{'groupId':group.id,'invitationId':invitation.id}) }}" style="color:#259aae; text-decoration:none;">accédez à sa version en ligne.</a>
            </td>
        </tr>
    </table>
    <!-- ====== -->
    <!-- HEADER -->
    <!-- ====== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="80" style="height:80px; background-color:#1d2129;">
            <td width="530" style="width:530px;">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr height="24" style="height:24px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                    <tr height="32" style="height:32px;">
                        <td width="530" style="width:530px;">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr height="32" style="height:32px;">
                                    <td width="20" style="width:20px">
                                        <!-- padding -->
                                    </td>
                                    <td width="154" style="width:154px;">
                                        <!-- LOGO -->
                                        <a href="{{ app.request.schemeAndHttpHost }}">
                                            <img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/01-logo.jpg') }}" style="display:block; border:none;" />
                                        </a>
                                    </td>
                                    <td width="234" style="width:234px">
                                        <!-- whitespace -->
                                    </td>
                                    <td width="70" style="width:70px; text-align: left;">
                                        <!-- LINK -->
                                        {# <a href="#" style="color:#259aae; text-decoration:none; font-size:12px;">
                                            Mon profil
                                        </a> #}
                                    </td>
                                    <td width="32" style="width:32px">
                                        <!-- PROFIL PIC -->
                                        {# <a href="#">
                                            <img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/02-profil-pic.jpg') }}" style="display:block; border:none; width:32px; height:32px;" />
                                        </a> #}
                                    </td>
                                    <td width="20" style="width:20px">
                                        <!-- padding -->
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr height="24" style="height:24px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- ===== -->
    <!-- TITLE -->
    <!-- ===== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="330" style="height:330px;">
            <td width="530" style="width:530px;">
                <img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/03-title-invitation.jpg') }}" style="display:block; border:none;">
            </td>
        </tr>
    </table>
    <!-- ======= -->
    <!-- CONTENT -->
    <!-- ======= -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td width="530" style="width:530px; background-color:#374860;">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td width="2" style="width:2px;"></td>
                        <td width="526" style="width:526px; background-color:#fff">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr height="20" style="height:20px;">
                                    <td width="20" style="width:20px;"></td>
                                    <td width="486" style="width:486px;"></td>
                                    <td width="20" style="width:20px;"></td>
                                </tr>
                                <tr>
                                    <td width="20" style="width:20px;"></td>
                                    <td width="486" style="width:486px;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td width="486" style="width:486px; vertical-align:top; font-family:Verdana,sans-serif; color:#37485f; font-size:10px;">
                                                    <!-- img & name -->
                                                    <a href="{{ app.request.schemeAndHttpHost ~ path('profil', {'id':hashEncode(invitation.inviteby.id)}) }}">
                                                        {% if invitation.inviteby.avatar.isImage %}
                                                            <img src="{{ app.request.schemeAndHttpHost }}{{ pum_media_url(invitation.inviteby.avatar, 64) }}" style="border:none;margin-right:6px; float:left;">
                                                        {% endif %}
                                                    </a>
                                                    <span style="float:left;"><a href="{{ app.request.schemeAndHttpHost ~ path('profil', {'id':hashEncode(invitation.inviteby.id)}) }}" style="font-size:12px; text-decoration:none; color:#37485f; font-weight:bold;">{{ invitation.inviteby.firstname ~ ' ' ~ invitation.inviteby.lastname }}</a> vous invite à vous inscrire sur ViaEduc et à rejoindre son réseau en participant au groupe {{ group.name }}.</span>
                                                </td>
                                            </tr>
                                            <tr height="10" style="height:10px;">
                                                <td width="486" style="width:486px;"></td>
                                            </tr>
                                            <tr>
                                                <td width="486" style="width:486px; background-color:#ededed">
                                                    <table border="0" cellpadding="0" cellspacing="0">
                                                        <tr height="10" style="height:10px;">
                                                            <td width="10" style="width:10px;"></td>
                                                            <td width="466" style="width:466px;"></td>
                                                            <td width="10" style="width:10px;"></td>
                                                        </tr>
                                                        <tr>
                                                            <td width="10" style="width:10px;"></td>
                                                            <td width="466" style="width:466px; font-family:Verdana,sans-serif; font-size:10px; color:#717880;">
                                                                <!-- text -->
                                                                {{ invitation.content }}
                                                            </td>
                                                            <td width="10" style="width:10px;"></td>
                                                        </tr>
                                                        <tr height="10" style="height:10px;">
                                                            <td width="10" style="width:10px;"></td>
                                                            <td width="466" style="width:466px;"></td>
                                                            <td width="10" style="width:10px;"></td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr height="10" style="height:10px;">
                                                <td width="486" style="width:486px;"></td>
                                            </tr>
                                            <tr>
                                                <td width="486" style="width:486px; font-family:Verdana, sans-serif; font-size:12px; color:#24445d;">
                                                    <a href="{{ app.request.schemeAndHttpHost }}" style="text-decoration:none; color:#259aae;">Viaeduc.fr</a> est le réseau social professionnel des enseignants. Son ambition est de vous permettre d’échanger autour de vos pratiques professionnelles, de partager des ressources éducatives, de collaborer et co-construire au sein de groupes de travail de nouvelles pratiques et de nouvelles ressources.</a>
                                                </td>
                                            </tr>
                                            <tr height="10" style="height:10px;">
                                                <td width="486" style="width:486px;"></td>
                                            </tr>
                                            <tr>
                                                <td width="486" style="width:486px;">
                                                    <a href="{{ confirmation_link }}"><img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/05-join-button.jpg') }}" style="display:block; border:none"></a>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td width="20" style="width:20px;"></td>
                                </tr>
                                <tr height="20" style="height:20px;">
                                    <td width="20" style="width:20px;"></td>
                                    <td width="486" style="width:486px;"></td>
                                    <td width="20" style="width:20px;"></td>
                                </tr>
                            </table>
                        </td>
                        <td width="2" style="width:2px;"></td>
                    </tr>
                    <tr height="2" style="height:2px;">
                        <td width="2" style="width:2px;"></td>
                        <td width="526" style="width:526px;"></td>
                        <td width="2" style="width:2px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- ====== -->
    <!-- FOOTER -->
    <!-- ====== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="50" style="height:50px; background-color:#242a33;">
            <td width="530" style="width:530px;">
            </td>
        </tr>
    </table>
    <!-- ===== -->
    <!-- LEGAL -->
    <!-- ===== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="100" style="height:100px;">
            <td width="530" style="width:530px; font-family:arial, sans-serif; font-size:11px; color:#000; text-align:center;">
                <a href="{{ app.request.schemeAndHttpHost ~ path('login') ~ '#popin_forget_password'}}" style="color:#259aae; text-decoration:none; font-weight:bold;">Vous avez oublié votre mot de passe ?</a><br />
                {{ "common.mails.footer.gerermail"|trans({}, 'rpe') }} <a href="{{ app.request.schemeAndHttpHost ~ path('my_notifications') }}" style="color:#259aae; text-decoration:none;">{{ "common.mails.footer.parametrecompte"|trans({}, 'rpe') }}</a>.<br/>
                {{ "common.mails.footer.legal"|trans({}, 'rpe') }} <a href="{{ app.request.schemeAndHttpHost ~ path('my_notifications') }}" style="color:#259aae; text-decoration:none;">{{ "common.mails.footer.mesnotifications"|trans({}, 'rpe') }}</a>.
            </td>
        </tr>
    </table>
</div>