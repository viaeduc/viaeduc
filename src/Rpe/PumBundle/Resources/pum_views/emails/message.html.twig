{% extends "pum://empty_layout.html.twig" %}

{% block main_content %}
{% spaceless %}
{% set author = message.author %}

<div class="wrapper" style="width:530px; margin:0 auto; font-family: arial, sans-serif;">
    <!-- ========= -->
    <!-- SMALL TOP -->
    <!-- ========= -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="50" style="height:50px;">
            <td width="530" style="background-color:#fff; color:#000; height: 50px; width:530px; text-align:center; font-size:11px;">
                Si cet email ne s'affiche pas correctement, <a href="{{ app.request.schemeAndHttpHost }}{{ path('mail_notification_message', {'message_id': message.id, 'contact_id': contact.id}) }}" style="color:#259aae; text-decoration:none;">accédez à sa version en ligne.</a>
            </td>
        </tr>
    </table>
    <!-- ====== -->
    <!-- HEADER -->
    <!-- ====== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="80" style="height:80px; background-color:#1d2129;">
            <td width="530" style="width:530px;">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr height="24" style="height:24px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                    <tr height="32" style="height:32px;">
                        <td width="530" style="width:530px;">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr height="32" style="height:32px;">
                                    <td width="20" style="width:20px">
                                        <!-- padding -->
                                    </td>
                                    <td width="154" style="width:154px;">
                                        <!-- LOGO -->
                                        <a href="{{ app.request.schemeAndHttpHost }}{{ path('home') }}">
                                            <img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/01-logo.jpg') }}" style="display:block; border:none;" />
                                        </a>
                                    </td>
                                    <td width="234" style="width:234px">
                                        <!-- whitespace -->
                                    </td>
                                    <td width="70" style="width:70px; text-align: left;">
                                        <!-- LINK -->
                                        <a href="{{ app.request.schemeAndHttpHost }}{{ path('profil', {'id': hashEncode(contact.id)}) }}" style="color:#259aae; text-decoration:none; font-size:12px;">
                                            Mon profil
                                        </a>
                                    </td>
                                    <td width="32" style="width:32px">
                                        <!-- PROFIL PIC -->
                                        <a href="{{ app.request.schemeAndHttpHost }}{{ path('profil', {'id': hashEncode(contact.id)}) }}">
                                            {{ macros.show_user_avatar(contact, 'relation', 32, null) }}
                                        </a>
                                    </td>
                                    <td width="20" style="width:20px">
                                        <!-- padding -->
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr height="24" style="height:24px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- ===== -->
    <!-- TITLE -->
    <!-- ===== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="80" style="height:80px;">
            <td width="530" style="width:530px; background-color:#374860;">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr height="20" style="height:20px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                    <tr height="40" style="height:40px;">
                        <td width="530" style="width:530px;font-family:Verdana, sans-serif;font-size:18px;color:#ffffff;padding-left:25px;">
                            Vous avez recu un message
                        </td>
                    </tr>
                    <tr height="20" style="height:20px;">
                        <td width="530" style="width:530px;"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- ======= -->
    <!-- CONTENT -->
    <!-- ======= -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr style="background-color:#374860;">
            <td width="2" style="width:2px;">
            </td>
            <td width="526" style="width:526px; background-color:#fff">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr height="20" style="height:20px;">
                        <td width="20" style="width:20px;"></td>
                        <td width="486" style="width:486px;"></td>
                        <td width="20" style="width:20px;"></td>
                    </tr>
                    <tr>
                        <td width="20" style="width:20px;"></td>
                        <td width="486" style="width:486px;">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr height="64" style="height:64px;">
                                    <!-- sender info -->
                                    <td width="486" style="width:486px;">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr height="64" style="height:64px;">
                                                <td width="64" style="width:64px;">
                                                    <!-- img -->
                                                    {{ macros.show_user_avatar(author, 'relation', 64, null) }}
                                                </td>
                                                <td width="6" style="width:6px;"></td>
                                                <td width="416" style="width:416px; font-family:Verdana,sans-serif;">
                                                    <a href="{{ app.request.schemeAndHttpHost }}{{ path('profil', {'id': hashEncode(author.id)}) }}" style="display:block; float:left; clear:both; font-size:12px; font-weight:bold; color:#37485f; text-decoration:none;">{{ author.fullname }}</a>

                                                    {% if author.occupation %}
                                                        <span style="display:block; float:left; clear:both; font-size:10px; color:#565656;">{{ author.occupation.name }}</span>
                                                    {% endif %}
                                                    
                                                    <span href="#" style="display:block; float:left; clear:both; font-size:10px; color:#1995aa; text-decoration:none;">{{ commonRelations|length }} relations en commun</span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr height="10" style="height:10px;">
                                    <td width="486" style="width:486px;"></td>
                                </tr>
                                <tr>
                                    <!-- text-box -->
                                    <td width="486" style="width:486px; background-color:#ededed">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr height="10px;" style="height:10px;">
                                                <td width="10" style="width:10px;"></td>
                                                <td width="466" style="width:466px;"></td>
                                                <td width="10" style="width:10px;"></td>
                                            </tr>
                                            <tr>
                                                <td width="10" style="width:10px;"></td>
                                                <td width="466" style="width:466px; font-family:Verdana,sans-serif; font-size:10px; color:#717880;">
                                                    {{ message.content }}
                                                </td>
                                                <td width="10" style="width:10px;"></td>
                                            </tr>
                                            <tr height="10px;" style="height:10px;">
                                                <td width="10" style="width:10px;"></td>
                                                <td width="466" style="width:466px;"></td>
                                                <td width="10" style="width:10px;"></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr height="10" style="height:10px;">
                                    <td width="486" style="width:486px;"></td>
                                </tr>
                            </table>
                        </td>
                        <td width="20" style="width:20px;"></td>
                    </tr>
                    <tr height="30" style="height:30px;">
                        <td width="20" style="width:20px;"></td>
                        <td width="486" style="width:486px;">
                            <a href="{{ app.request.schemeAndHttpHost }}{{ path('discussion', {'id': message.discussion.id}) }}" style="display:block; height:29px; width: 105px;"><img src="{{ app.request.schemeAndHttpHost }}{{ asset('bundles/rpepum/images/email/05-answer_link.jpg') }}" style="display:block; border:none; height:29px; width: 105px;"></a>
                        </td>
                        <td width="20" style="width:20px;"></td>
                    </tr>
                    <tr height="10" style="height:10px;">
                        <td width="20" style="width:20px;"></td>
                        <td width="486" style="width:486px;"></td>
                        <td width="20" style="width:20px;"></td>
                    </tr>
                </table>
            </td>
            <td width="2" style="width:2px;">
            </td>
        </tr>
        <tr height="2" style="height:2px; background-color:#374860;">
            <td width="2" style="width:2px;">
            </td>
            <td width="526" style="width:526px;">
            </td>
            <td width="2" style="width:2px;">
            </td>
        </tr>
    </table>
    <!-- ====== -->
    <!-- FOOTER -->
    <!-- ====== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr heigh="50 "style="height:50px;">
            <td width="530" style="width:530px; background-color:#1c2027;"></td>
        </tr>
    </table>
    <!-- ===== -->
    <!-- LEGAL -->
    <!-- ===== -->
    <table border="0" cellpadding="0" cellspacing="0">
        <tr height="100" style="height:100px;">
            <td width="530" style="width:530px; font-family:arial, sans-serif; font-size:11px; color:#000; text-align:center;">
                <a href="{{ app.request.schemeAndHttpHost }}{{ path('login') }}" style="color:#259aae; text-decoration:none; font-weight:bold;">Vous avez oublié votre mot de passe ?</a><br />
                Pour gérer les e-mails que nous vous envoyons, rendez-vous dans les <a href="{{ app.request.schemeAndHttpHost ~ path('my_notifications') }}" style="color:#000000; text-decoration:none;">paramètres de votre compte</a>.<br>
                {# Conformément à la loi "Informatique et Libertés" du 6 janvier 1978 modifiée en 2004, vous bénéficiez d'un droit
                d'accès et de rectification aux informations qui vous concernent, que vous pouvez exercer en nous
                adressant votre demande à <a href="#" style="color:#000000; text-decoration:none;">newsletter@blocmarque.fr</a>. #}
            </td>
        </tr>
    </table>
</div>
{% endspaceless %}
{% endblock %}