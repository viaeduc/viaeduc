<!-- Use this block too add color classes or no-image, card-title -->
<li class="card card-title {% block card_class %}{% endblock %}">
    <div class="card-left">
        {% if editor.owner is not null %}
            <div class="card-publisher">
                <a href="{{ path('profil', {id : hashEncode(editor.owner.id)}) }}" class="card-publisher-image">
                    <!-- Profil image block -->
                    {% block card_publisher_image %}
                        {{ macros.show_user_avatar(editor.owner, 'relation', 120, null) }}
                        {# <img src="{{ asset('bundles/rpepum/images/tmp/photo-profil_small.png') }}" alt="" /> #}
                    {% endblock %}
                </a>
            </div>
        {% endif %}
        <a href="{{ path('editor', {id : editor.id}) }}" class="card-title-link">
            <h2 class="card-title highlight highlight-wrapper">
                <!-- Card title block -->
                {% block card_title %}
                    {{ editor.name|truncate(40, true) }}
                {% endblock %}
            </h2>
        </a>
    </div><!--
    --><div class="card-right">
        <a href="{{ path('editor', {id : editor.id}) }}">
            <!-- Card image block -->
            {% block card_image %}
                {% if editor.cover is not null %}
                    {{ macros.show_editor_avatar(editor, 'cover', 375, null) }}
                {% endif %}
                {# <img src="{{ asset('bundles/rpepum/images/tmp/teacher_math.jpg') }}" alt="" /> #}
            {% endblock %}
        </a>
    </div><!--
